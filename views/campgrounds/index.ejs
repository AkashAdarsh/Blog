<% include ../partials/header %>

     <header class="jumbotron">
         <div class="container">
             <h1><span class="glyphicon glyphicon-tent"></span> Welcome To My BLOG!</h1>
             <p>View our hand-picked blogs from all over the world</p>
             <p>
                <a class="btn btn-primary btn-lg" href="/blogs/new">Add New blog</a>
             </p>
              <p>
              <form action="/blogs" method="GET" class="form-inline" id="blog-search">
                <div class="form-group">
                  <input type="text" name="search" placeholder="Blog search..." class="form-control">
                </div>
              </form>
             </p>
         </div>
     </header>

     <div class="row text-center flex-wrap" id="blog-grid">
        <% blogs.forEach(function(blog){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                   <img src="<%= blog.image %>">
                   <div class="caption">
                       <h4><%= blog.name %></h4>
                   </div>
                   <p>
                       <a href="/blogs/<%= blog._id %>" class="btn btn-primary">More Info</a>
                   </p>
                </div>
            </div>
        <% }); %>
    </div>

<% include ../partials/footer %>
